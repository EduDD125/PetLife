<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.petArea.editPetInfos">

    <include
        android:id="@+id/customToolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarDivider"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/petInfosVw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32sp"
        app:layout_constraintTop_toBottomOf="@id/customToolbar">


        <TextView
            android:id="@+id/petInfosTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit pet basic infos"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/petInfosVw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:baselineAligned="false" />

        <LinearLayout
            android:id="@+id/petNameLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/petInfosTitleTv">

            <TextView
                android:id="@+id/petNameLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/petNameTextEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input new name..."
                android:inputType="textUri"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/petNameLabelTv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/petBirthDateLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/petNameLL">

            <TextView
                android:id="@+id/petBirthDateLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth date: "
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/petBirthDateEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input new birth date..."
                android:inputType="textUri"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/petBirthDateLabelTv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/petColorLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/petBirthDateLL">

            <TextView
                android:id="@+id/petColorLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color: "
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/petColorEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input new color..."
                android:inputType="textUri"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/petColorLabelTv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/petTypeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/petColorLL">

            <TextView
                android:id="@+id/petTypeLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/petTypeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input new type..."
                android:inputType="textUri"
                android:minHeight="48dp"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/petTypeLabelTv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/petSizeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/petTypeLL">

            <TextView
                android:id="@+id/petSizeLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: "
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/petSizeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input new size..."
                android:inputType="textUri"
                android:minHeight="48dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/petSizeLabelTv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/userPetsSectionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="right">

            <Button
                android:id="@+id/cancelEditBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:layout_marginRight="8dp"
                />

            <Button
                android:id="@+id/saveEditBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAllCaps="false"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>